<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">passw0rd</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/project</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hbm2ddl.auto">update</property>

		<mapping class="com.me.pojo.User" />
		<mapping class="com.me.pojo.Person" />
		<mapping class="com.me.pojo.Address" />
		<mapping class="com.me.pojo.Seller" />
		<mapping class="com.me.pojo.SellerProperty" />
		<mapping class="com.me.pojo.Property" />
		<mapping class="com.me.pojo.Review" />
		<mapping class="com.me.pojo.Buyer" />
		<mapping class="com.me.pojo.BuyerProperty" />
		<mapping class="com.me.pojo.Messages" />
	</session-factory>
</hibernate-configuration>
